{% extends 'base.html.twig' %}

{% block content %}

    <link rel="stylesheet" type="text/css" href="{{  asset('styles/bootstrap4/bootstrap.min.css')}}">
    <link rel="stylesheet" type="text/css" href="{{  asset('plugins/font-awesome-4.7.0/css/font-awesome.min.css')}}">
    <link rel="stylesheet" type="text/css" href="{{  asset('plugins/OwlCarousel2-2.2.1/owl.carousel.css')}}">
    <link rel="stylesheet" type="text/css" href="{{  asset('plugins/OwlCarousel2-2.2.1/owl.theme.default.css')}}">
    <link rel="stylesheet" type="text/css" href="{{  asset('plugins/OwlCarousel2-2.2.1/animate.css')}}">
    <link rel="stylesheet" type="text/css" href="{{  asset('styles/events.css')}}">
    <link rel="stylesheet" type="text/css" href="{{  asset('styles/events_responsive.css')}}">



<div class="container">
    <div class="row my-4 my-md-5">
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <center>

            <img src="{{ asset('../public/uploads/download.png') }}" alt="Symfony!" />
                </center>

        </div>
    </div>
    <div class="row overflow-hidden">
        <div class="col-12 wow slideInLeft" data-wow-duration="1.5s">

                {{ form_start(form)  }}
                <div class="form-row">
                    <div class="form-group col-md-6">

                        Titre: *  {{ form_widget(form.titreSujet,{ 'attr': {'class': 'form-control p-3 rounded-0'}})}}

                    </div>
                    <div class="form-group col-md-6">

                        Categorie: *  {{ form_widget(form.categorie,{ 'attr': {'class': 'form-control p-3 rounded-0'}})}}
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">

                        <textarea placeholder="Message" rows="4"  {{ form_widget(form.contenuSujet,{ 'attr': {'class': 'form-control p-3 rounded-0'}})}}  </textarea>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-12 text-center">
                        <button type="submit" class="btn fables-second-background-color fables-btn-rounded white-color px-7 font-20 py-2">Ajouter votre sujet</button>
                    </div>
                </div>
                {{ form_end(form)  }}





        </div>

    </div>
</div>



<script src="{{ asset('js/jquery-3.2.1.min.js') }}" ></script>
                <script src="{{ asset('styles/bootstrap4/popper.js') }}" ></script>
                <script src="{{ asset('styles/bootstrap4/bootstrap.min.js') }}" ></script>
                <script src="{{ asset('plugins/OwlCarousel2-2.2.1/owl.carousel.js') }}" ></script>
                <script src="{{ asset('plugins/easing/easing.js') }}" ></script>
                <script src="{{ asset('plugins/parallax-js-master/parallax.min.js') }}" ></script>
                <script src="{{ asset('js/events.js') }}" ></script>




{% endblock %}
